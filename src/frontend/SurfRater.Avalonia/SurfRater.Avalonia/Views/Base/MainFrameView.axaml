<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:base="using:SurfRater.Avalonia.ViewModels.Base"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SurfRater.Avalonia.Views.Base.MainFrameView"
             xmlns:vm="SurfRater.Avalonia.ViewModels.Base"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="using:SurfRater.Avalonia.Views"
             x:DataType="base:MainFrameViewModel"
             >
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="30" />
    </Grid.RowDefinitions>
    <ContentControl Grid.Row="0"
                    Content="{Binding CurrentViewModel}" />  
    <ContentControl Grid.Row="1">
        <StackPanel Orientation="Horizontal"
                    Background="Gray"
                    HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding ChangeViewToHomeCommand}">
                    <materialIcons:MaterialIcon Kind="Home" />
                </Button>

                <Button Background="Transparent"
                        BorderBrush="Transparent">
                    <materialIcons:MaterialIcon Kind="Check" />           
                </Button>

                <Button Background="Transparent"
                        BorderBrush="Transparent">
                    <materialIcons:MaterialIcon Kind="Gear" />            
                </Button>

                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding ChangeViewToAboutCommand}">
                    <materialIcons:MaterialIcon Kind="Info" />
                </Button>	
            </StackPanel>
        </StackPanel>
    </ContentControl>
</Grid>
</UserControl>
