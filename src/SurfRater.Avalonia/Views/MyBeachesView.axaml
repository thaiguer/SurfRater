<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:SurfRater.Avalonia.ViewModels"
			 x:Class="SurfRater.Avalonia.Views.MyBeachesView"
			 x:DataType="vm:MyBeachesViewModel"
			 xmlns:local="clr-namespace:SurfRater.Avalonia.Views.Components">
	<Design.DataContext>
		<vm:MyBeachesViewModel />
	</Design.DataContext>

	<StackPanel>
		<Label>
			This are mine beaches
		</Label>

		<Button Content="Add Beach"
				Command="{Binding AddBeachCommand}"/>

		<ScrollViewer>
			<ListBox Items="{Binding MyBeaches}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<local:MyBeachItemView/>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>
	</StackPanel>
</UserControl>