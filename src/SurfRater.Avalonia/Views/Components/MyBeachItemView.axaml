<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:SurfRater.Avalonia.ViewModels.Components"
             x:Class="SurfRater.Avalonia.Views.Components.MyBeachItemView"
             x:DataType="vm:MyBeachItemViewModel">
    <Design.DataContext>
		<vm:MyBeachItemViewModel />
	</Design.DataContext>
	<Button Command="{Binding OpenBeachStatus}">
		<StackPanel Orientation="Horizontal">
			<Ellipse Width="20" Height="20" Fill="{Binding Beach.SurfConditionColor}"/>
			<Label Content="{Binding Beach.Name}"/>
		</StackPanel>
	</Button>
</UserControl>