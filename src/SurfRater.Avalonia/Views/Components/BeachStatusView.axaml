<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:SurfRater.Avalonia.ViewModels.Components"
			 x:DataType="vm:BeachStatusViewModel"
			 x:Class="SurfRater.Avalonia.Views.Components.BeachStatusView">
	<Design.DataContext>
		<vm:BeachStatusViewModel />
	</Design.DataContext>

	<StackPanel>
		<ProgressBar IsIndeterminate="{Binding IsBusy}"
					 IsVisible="{Binding IsBusy}"/>
		<Label Content="{Binding Beach.Name}"/>
		<Label Content="{Binding Beach.SurfConditionColor}"/>
		<Label Content="{Binding Beach.SurfCondition}"/>
		<Button Content="Update" Command="{Binding UpdateStatusCommand}"/>
	</StackPanel>
</UserControl>